@using Microsoft.AspNetCore.Identity
@model IEnumerable<Barbershop.ViewModels.ServiceViewModel>
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager


@{
    ViewData["Title"] = "Всички услуги";
}

<h1>Всички услуги</h1>

@if (User.IsInRole("Admin"))
{
    <a asp-action="Create" class="btn btn-primary mb-3">Създай нова услуга</a>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Име</th>
            <th>Описание</th>
            <th>Цена</th>
            <th>Продължителност (минути)</th>
            <th>Категория</th>
            @if(User.IsInRole("Admin") || User.IsInRole("User"))
            {
                <th>Действия</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Description</td>
                <td>@service.Price.ToString("F2") лв.</td>
                <td>@service.Duration</td>
                <td>@service.CategoryName</td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-sm btn-warning">Редактирай</a>
                        <a asp-action="Delete" asp-route-id="@service.Id" class="btn btn-sm btn-danger">Изтрий</a>
                    }
                    @if (User.IsInRole("User"))
                    {
                        <a asp-controller="Appointment" asp-action="Book" asp-route-id="@service.Id" class="btn btn-success">Запази час</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>